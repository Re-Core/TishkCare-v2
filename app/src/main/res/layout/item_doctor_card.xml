<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardRootColor"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/card_name_container"
            android:padding="10dp"
            android:id="@+id/doctor_name_container"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/doctorNameCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_name_container"
                android:layout_alignStart="@+id/doctor_name_container"
                android:text="Dr.Kovan" />

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/card_speciality_container"
            android:id="@+id/doctor_Speciality_container"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_name_container"
            android:padding="14dp"
            >

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/doctorSpecialityCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Dentist" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/card_address_container"
            android:orientation="vertical"
            android:id="@+id/doctor_Address_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_Speciality_container"
            android:padding="14dp"
            >

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/doctorAddressPhoneCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07701234567"
                />
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/doctorAddressLocationCard"
                android:text="Tuba street shex mahmud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/card_social_container"
            android:orientation="horizontal"
            android:id="@+id/doctor_Social_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_Address_container"
            android:padding="18dp"
            >

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/doctorSocial1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kovan Tariq" />

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="12dp"
                android:id="@+id/doctorSocial2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kovan@gmail.com"
                />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctorCardImg"
            android:layout_marginRight="32dp"
            android:src="@drawable/man"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="92dp"
            android:layout_height="92dp"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>